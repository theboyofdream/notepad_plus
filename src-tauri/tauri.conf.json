{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "notepad+",
  "version": "0.1.0",
  "identifier": "com.theboyofdream.notepad.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": false,
    "macOSPrivateApi": false,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": []
      },
      "capabilities": [],
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false,
      "pattern": {
        "use": "brownfield"
      }
    },
    "windows": [
      {
        "title": "notepad+",
        "minWidth": 100,
        "minHeight": 100,
        "width": 300,
        "height": 300,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "./icons/32x32.png",
      "./icons/128x128.png",
      "./icons/128x128@2x.png",
      "./icons/icon.icns",
      "./icons/icon.ico"
    ]
  }
}
