{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "notepad+",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "window": {
        "setTitle": true,
        "setAlwaysOnTop": true,
        "setFullscreen": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "notepad+",
        "minWidth": 100,
        "minHeight": 100,
        "width": 800,
        "height": 600,
        "decorations": true,
        "alwaysOnTop": false,
        "fileDropEnabled": true,
        "transparent": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.theboyofdream.notepad.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
